<div class="height-100 bg-light">
    <div class="container-contact100">
        <div lass="contact100-form" class="wrap-contact100">
            <form action="/Capsulas" method="post" onsubmit="confirmarCap()">
                <span class="contact100-form-title">
                    Capsulas
                </span>
                <div class="wrap-input100">
                    <input class="input100" type="text" name="artista"
                        placeholder="Artista (ej. Mario Garcia)">
                    <span class="focus-input100"></span>
                </div>
                <div class="wrap-input100">
                    <textarea class="input100" type="text" name="resumen" placeholder="Resumen (ej. La representacion de esta pintura...)"></textarea>
                    <span class="focus-input100"></span>
                </div>

                <div class="wrap-input100">
                    <input class="form-control form-control-lg" type="file" name="avatar"
                        style="background: #fff;border-radius: 31px;font-family: 'Lato';font-size: 15px;"
                        placeholder="Imagenes (ej. img.png;img2.png)" multiple>
                    <span class="focus-input100"></span>
                </div>

                <div class="container-contact100-form-btn">
                    <button type="submit" class="contact100-form-btn">
                        <span>
                            <i class="fa fa-paper-plane-o m-r-6" aria-hidden="true"></i>
                            Submit
                        </span>
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>
